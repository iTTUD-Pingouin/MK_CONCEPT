<%= form_for @piece do |f| %>
    <%= f.label :name, "Nom de la pièce" %>
    <%= f.text_field :name %>

    <%= f.label :description, "Description" %>
    <%= f.text_field :description %>

    <%= f.label :category, "Catégorie" %>
    <%= f.text_field :category %>

    <%= f.label :subcategory, "Sous-catégorie" %>
    <%= f.text_field :subcategory %>

    <%= f.submit %>
<% end %>
